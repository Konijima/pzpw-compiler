    "watch": "npm run clean && tsc --watch",
    "clean": "node ./node_modules/del-cli/cli.js ./bin ./lib",
    "pre-publish": "npm run build"
  },
  "publishConfig": {
    "tag": "v1-latest"
  },
  "author": "Konijima",
  "license": "MIT",
  "funding": {
    "type": "paypal",
    "url": "https://paypal.me/Konijima"
  },
  "homepage": "https://github.com/Konijima/pzpw-compiler#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Konijima/pzpw-compiler.git"
  },
  "bugs": {
    "url": "https://github.com/Konijima/pzpw-compiler/issues"
  },
  "keywords": [
    "pzpw",
    "pipewrench",
    "projectzomboid"
  ],
  "devDependencies": {
    "@types/node": "^18.7.5",
    "del-cli": "^4.0.1",
    "lua-types": "^2.11.0",
    "typescript": "^4.6.2",
    "typescript-to-lua": "^1.4.2"
  }
