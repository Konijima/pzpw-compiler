{
  "name": "pzpw-compiler",
  "version": "2.1.0-alpha",
  "description": "Node command-line tool to compile PZPW projects.",
  "main": "./dist/lib/compiler.js",
  "type": "module",
  "bin": {
    "pzpw-compiler": "./dist/index.js"
  },
  "types": "./dts",
  "scripts": {
    "clean": "del-cli --force ./bin ./lib ./dts",
    "build": "npm run clean && tsc",
    "watch": "npm run clean && tsc --watch"
  },
  "publishConfig": {
    "tag": "latest"
  },
  "author": "Konijima",
  "license": "Apache License Version 2.0",
  "funding": {
    "type": "paypal",
    "url": "https://paypal.me/Konijima"
  },
  "homepage": "https://github.com/Konijima/pzpw-compiler#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Konijima/pzpw-compiler.git"
  },
  "bugs": {
    "url": "https://github.com/Konijima/pzpw-compiler/issues"
  },
  "keywords": [
    "pzpw",
    "compiler",
    "pipewrench",
    "typescript",
    "project-zomboid"
  ],
  "devDependencies": {
    "@types/node": "^18.7.5",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "chalk": "^5.0.1",
