{
  "name": "pzpw-compiler",
  "version": "1.0.0",
  "description": "Node command-line tool to compile PZPW projects.",
  "main": "./lib/compiler.js",
  "bin": {
    "pzpw-compiler": "./bin/index.js"
  },
